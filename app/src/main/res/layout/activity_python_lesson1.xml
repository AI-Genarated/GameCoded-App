<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_python_lesson1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_explore"
    android:fillViewport="true"
    tools:context=".PythonLesson1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Heading -->
        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn python fundamentals"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Lesson Text -->
        <TextView
            android:id="@+id/tvLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Python is a programming language that is easy and fun to learn!\n\n1. Python uses print() to show messages.\n2. Variables store values, like x = 5.\n3. Indentation is very important!\n4. Python is used in games, apps, and even AI!\n\nLet’s play a game below ⬇️"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="24dp"/>

        <!-- Mini Drag and Drop Game -->
        <TextView
            android:id="@+id/tvGameInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag the code blocks into the correct order to print Hello!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/codeBlocks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/block1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                android:text="@string/print"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/block2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:text='@string/helloo'
                android:padding="12dp"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/block3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:text="@string/brace"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDropTarget"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="@string/drop_blocks_here"
            android:textSize="16sp"
            android:textStyle="italic"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black"/>

        <!-- Multiple Choice Quiz -->
        <TextView
            android:id="@+id/tvQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz: Which command shows text on the screen in Python?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:textColor="@color/black"/>

        <RadioGroup
            android:id="@+id/quizOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/option1"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="echo()"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/option2"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="print()"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/option3"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="say()"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnSubmitQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Answer"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvQuizResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

    </LinearLayout>

</ScrollView>
