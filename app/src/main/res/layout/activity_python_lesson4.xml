<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_python_lesson4"
    android:background="@drawable/gradient_background_explore"
    android:fillViewport="true"
    tools:context=".PythonLesson4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHeadingLoop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loops: Do it Again!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/tvLessonLoop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='Loops repeat actions. A for-loop runs a set number of times.\n\nExample:\nfor i in range(3):\n    print(\"Hi!\")\n\nAssemble the loop to show 3 stars!'
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Drag blocks to form loop -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/loopBlock1"
                android:text="for i in range(3):"
                android:padding="12dp"
                android:background="@android:color/holo_blue_light"
                android:layout_margin="8dp"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/loopBlock2"
                android:text='print(\"â˜…\")'
                android:padding="12dp"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="8dp"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loopDrop"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textColor="@color/black">

            <TextView android:id="@+id/loopResult" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Drop here to run the loop" android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Quiz -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Quiz: How many times runs range(4)?" android:textSize="18sp" android:paddingBottom="8dp" android:textStyle="bold" android:textColor="@color/black"/>

        <RadioGroup android:id="@+id/rgLoop" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/loopOpt1" android:layout_width="100dp" android:layout_height="48dp" android:text="3" android:textStyle="bold" android:textColor="@color/black"/>
            <RadioButton android:id="@+id/loopOpt2" android:layout_width="100dp" android:layout_height="48dp" android:text="4" android:textStyle="bold" android:textColor="@color/black"/>
            <RadioButton android:id="@+id/loopOpt3" android:layout_width="100dp" android:layout_height="48dp" android:text="5" android:textStyle="bold" android:textColor="@color/black"/>
        </RadioGroup>

        <Button android:id="@+id/btnLoopSubmit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Check Answer" android:layout_marginTop="12dp" android:textStyle="bold"/>
        <TextView android:id="@+id/tvLoopResult" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textStyle="bold" android:paddingTop="8dp"/>

    </LinearLayout>
</ScrollView>
